@using OdeToFood.Core
@model Restaurant

    <div class="card panel-default">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <span>Location: @Model.Location</span>
            <span>Cuisine: @Model.Cuisine</span>
        </div>
        <div class="card-footer">            
            <a asp-page="./Detail" asp-route-restaurantId="@Model.Id">more info</a>           
            
            <a asp-page="./Edit" asp-route-restaurantId="@Model.Id">Edit</a>
            
            <a asp-page="./Delete" asp-route-restaurantId="@Model.Id">Delete</a>            
        </div>
    </div>